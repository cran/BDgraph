	textVersion = paste( "Mohammadi, A. and Wit, E. C. (2015). Bayesian Structure Learning in Sparse Gaussian Graphical Models. Bayesian Analysis 10(1), 109-138." ),
	year        = "2015",
	journal     = "Bayesian Analysis",
	volume      = "10",
	number      = "1",
	pages       = "109-138",
)

